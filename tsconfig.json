
{
  "compilerOptions": {
    "strict": true,
    "module": "commonjs",
    "declaration": true,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "target": "ES6",
    "sourceMap": true,
    "outDir": "./dist",
    "baseUrl": "./src",
    "incremental": true,
    "resolveJsonModule": true,
    "types": ["node", "jest", "dayjs", "dayjs/plugin/utc", "dayjs-recur"],
    "typeRoots": ["./types", "./node_modules/@types"]
  },
  "include": ["src/**/*.ts"]
}
